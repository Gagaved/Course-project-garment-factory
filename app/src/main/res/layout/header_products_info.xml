<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
<FrameLayout
    android:id="@+id/imageframe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints"
    android:background="@color/gray">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/default_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        ></ImageView>
</FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageframe"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="150dp" />

        <TextView
            android:id="@+id/code"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/length"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/size"></TextView>

        <TextView
            android:id="@+id/width"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/length"></TextView>

        <TextView
            android:id="@+id/codetext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="Артикул:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/lengthtext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Длина:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/size"></TextView>

        <TextView
            android:id="@+id/pricetext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/codetext"></TextView>

        <TextView
            android:id="@+id/price"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/codetext"></TextView>

        <TextView
            android:id="@+id/sizetext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Размер:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/pricetext"></TextView>

        <TextView
            android:id="@+id/size"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/pricetext"></TextView>

        <TextView
            android:id="@+id/widthtext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ширина:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/lengthtext"></TextView>

        <TextView
            android:id="@+id/fablricslisttext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Список тканей:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/widthtext"></TextView>

        <TextView
            android:id="@+id/fablricslist"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/widthtext"></TextView>

        <TextView
            android:id="@+id/fittingslisttext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фурнитура:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/fablricslist"></TextView>

        <TextView
            android:id="@+id/fittingslist"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/fablricslist"></TextView>

        <TextView
            android:id="@+id/commenttext"
            style="@style/TextInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Описание:"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/fittingslist"></TextView>

        <TextView
            android:id="@+id/comment"
            style="@style/TextInfoStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/fittingslist"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/shadowframe"
        app:layout_constraintTop_toBottomOf="@id/textframe"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/drop_shadow_blue"
        tools:ignore="MissingConstraints">
    </FrameLayout>
    <TextView
        android:id="@+id/change_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/TextInfoStyle"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/blue_back"
        app:layout_constraintTop_toBottomOf="@id/shadowframe"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:shadowColor="@color/black"
        android:text="История изменений">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>