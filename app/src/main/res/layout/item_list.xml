<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardElevation="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:shadowColor="#000"
    android:shadowDx="30"
    android:shadowDy="60"
    android:shadowRadius="120"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_image"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название:"
            android:textColor="@color/black"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toTopOf="@+id/horizontal_guideline"
            card_view:layout_constraintEnd_toStartOf="@id/vertical_guideline" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toTopOf="@+id/horizontal_guideline"
            card_view:layout_constraintStart_toStartOf="@id/vertical_guideline" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Артикул:"
            android:textColor="@color/black"
            android:textSize="16sp"
            card_view:layout_constraintEnd_toEndOf="@id/vertical_guideline"
            card_view:layout_constraintTop_toTopOf="@+id/horizontal_guideline" />
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Артикул:"
            android:textColor="@color/black"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@id/vertical_guideline"
            card_view:layout_constraintTop_toTopOf="@+id/horizontal_guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>